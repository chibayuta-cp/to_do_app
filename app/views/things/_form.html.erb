<div class="main-form">
  <%= form_with model: @thing, local: true do |form| %>
    <div class="content">
      <i class="fas fa-th-list margin"></i> <%= form.label :content, "ToDo" %>
      <%= form.text_field :content, required: true %>
    </div>
    <div class="time">
      <i class="fas fa-clock"></i> <%= form.label :start_time, "日付" %>
      <%= form.date_select :start_time %>
    </div>
    <div class="submit">
      <%= form.submit "追加", class: "btn btn-outline-success" %>
    </div>
  <% end %>
</div>
