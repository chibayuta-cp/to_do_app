<div class="devise-main ">
  <h2><i class="fas fa-user"></i> <%= t('.sign_up') %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <i class="fas fa-envelope margin"></i> <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <i class="fas fa-key margin"></i> <%= f.label :password %><br />
      <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <i class="fas fa-key margin"></i> <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions margin">
      <%= f.submit t('.sign_up') %>
    </div>
  <% end %>
  <%= render "devise/shared/links", class: "btn btn-outline-primary" %>
</div>
